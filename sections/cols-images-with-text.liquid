{{ 'section-cols-images-with-text.css' | asset_url | stylesheet_tag }}

<section class="shopify-section section">
  <div class="page-width">
    {% if section.settings.title != blank %}
    <h2 class="image-with-text__heading inline-richtext h1">
                {{ section.settings.title }}
              </h2>
    {% endif %}
    <div class="steps">
    {% for block in section.blocks %}
      <div class="step">
        <img src="{{ block.settings.image | image_url }}">
        <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
      </div>
  </div>
</section>

{% schema %}
  {
    "name": "How it works",
    "settings": [
    {
      "type": "header",
      "content": "General Info"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
    ],
    "max_blocks": 4,
     "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "text",
          "type": "text",
          "label": "Text"
        }
      ]
    }
     ],
      "presets": [
    {
      "name": "How it works"
    }
  ]
  }
{% endschema %}

